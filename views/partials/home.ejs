<!-----Stories start---->
<% if(randomCon.length>0) { %>
   <div class="storyenclose"> 
      <% randomCon.forEach((rcon)=>{ %>  
    <div class="story">
       <img src='<%=`/${rcon.postImage.path}`%>' alt="stories">
    <div class="cover">
        <div class="heading">
           <p class="first">Interesting Blog post</p> 
           <% const posteddate = new Date(rcon.date)%>
           <% const year = posteddate.getFullYear(); %>
           <% const month = posteddate.toLocaleString('en-US', {month : 'long' }) %>
           <% const day = posteddate.getDate(); %>
           <p class="second"> <%= month + '-' + day + ' ' + year %> </p>
        </div> 
        <p class="title"><%=rcon.posttitle%></p>
        <p class="content"><%=rcon.postbody.length > 180 ? `${rcon.postbody.substring(0, 180)}...` : rcon.postbody %></p>
       <div class="navigate"><i class='fa fa-plane'></i> <a href='<%=`/blogposts/${rcon._id}`%>'>Check Blogs</a> </div>
       </div> 
    </div>  
    <% }); %>
       </div> 
   <% } %>

    <div class="viewall">
        <button>
       <p>View all Stories</p>
        <i class="fa fa-arrow-right"></i>
        </button>
    </div>
<!-----Stories end---->
 
   
